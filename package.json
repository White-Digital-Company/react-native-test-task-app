{
  "name": "test_app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "// --- develop --- //": "",
    "bootstrap": "yarn i && cd ios && npx pod install && cd ../",
    "prestart": "yarn adb",
    "start": "react-native start",
    "adb": "(adb reverse tcp:8081 tcp:8081 || true) && (adb reverse tcp:7007 tcp:7007 || true) && (adb reverse tcp:3000 tcp:3000 || true)",
    "android": "adb shell pm uninstall --user 0 com.tasa ; react-native run-android --variant=devDebug",
    "ios": "react-native run-ios --simulator='iPhone 14 Pro'",
    "// --- test --- //": "",
    "test": "jest --passWithNoTests",
    "// --- tools --- //": "",
    "pods": "cd ios && pod install && cd ..",
    "pods:m1": "cd ios && arch -x86_64 pod install && cd ..",
    "android:clear": "cd android && ./gradlew clean && cd ..",
    "ios:clear": "cd ios && rm -rf ./Podfile.lock && rm -rf ./Pods && cd ..",
    "// --- linters and formatters --- //": "",
    "lint": "eslint . --ext ts,tsx --fix --no-error-on-unmatched-pattern --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write '**/*.(ts|tsx)'",
    "validate": "tsc && yarn lint && pretty-quick --staged",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/stack": "^6.3.17",
    "@tanstack/react-query": "^5.59.19",
    "axios": "^1.7.7",
    "i18n": "^0.15.1",
    "react": "18.2.0",
    "react-native": "0.74.3",
    "react-native-config": "^1.5.3",
    "react-native-gesture-handler": "^2.17.1",
    "react-native-reanimated": "^3.14.0",
    "react-native-responsive-screen": "^1.4.2",
    "react-native-safe-area-context": "^4.10.7",
    "react-native-screens": "^3.32.0",
    "react-native-splash-screen": "^3.3.0",
    "react-native-svg": "^15.8.0",
    "react-native-svg-transformer": "^1.5.0",
    "twrnc": "^4.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@eslint/js": "^9.14.0",
    "@react-native/babel-preset": "0.74.85",
    "@react-native/eslint-config": "0.74.85",
    "@react-native/metro-config": "0.74.85",
    "@react-native/typescript-config": "0.74.85",
    "@total-typescript/ts-reset": "^0.5.1",
    "@tsconfig/react-native": "^3.0.0",
    "@types/qs": "^6.9.15",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-unicorn": "^48.0.1",
    "globals": "^15.11.0",
    "husky": "^8.0.3",
